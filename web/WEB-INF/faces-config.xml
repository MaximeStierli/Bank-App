<faces-config version="2.2"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"> 
   
    <application>
        <locale-config>
            <default-locale>fr</default-locale>
            <supported-locale>fr</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        
        <resource-bundle>
            <base-name>ch.hearc.ig.odi.customeraccount.internationalization.msg</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>

    <managed-bean>
        <managed-bean-name>CustomersBean</managed-bean-name>
        <managed-bean-class>ch.hearc.ig.odi.customeraccount.bean.CustomersBean</managed-bean-class>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>CustomerCreateBean</managed-bean-name>
        <managed-bean-class>ch.hearc.ig.odi.customeraccount.bean.CustomerCreateBean</managed-bean-class>
    </managed-bean>
        <managed-bean>
        <managed-bean-name>CustomerDetailsBean</managed-bean-name>
        <managed-bean-class>ch.hearc.ig.odi.customeraccount.bean.CustomerDetailsBean</managed-bean-class>
    </managed-bean>
    
    
    <navigation-rule>
        <from-view-id>/createCustomer.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>1</from-outcome>
            <to-view-id>/createCustomerOk.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/customersList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>detailsClient</from-outcome>
            <to-view-id>/detailsCustomer.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>